@model Company

<form method="post" enctype="multipart/form-data">
    <input asp-for="@Model.Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 my-4">
                <div class="pb-2">
                    <h2 class="text-primary">@(Model.Id == 0 ? "Create" : "Update") Company</h2>
                    <hr />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="@Model.Name" class="p-0"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="@Model.StreetAddress" class="p-0"></label>
                    <textarea asp-for="@Model.StreetAddress" class="form-control"></textarea>
                    <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="@Model.City" class="p-0"></label>
                    <input asp-for="@Model.City" class="form-control" />
                    <span asp-validation-for="@Model.City" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="@Model.State" class="p-0"></label>
                    <input asp-for="@Model.State" class="form-control" />
                    <span asp-validation-for="@Model.State" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="@Model.PostalCode" class="p-0"></label>
                    <input asp-for="@Model.PostalCode" class="form-control" />
                    <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="@Model.PhoneNumber" class="p-0"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }

                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-outline-secondary form-control" asp-controller="Company" asp-action="Index">
                            Back to list
                        </a>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}